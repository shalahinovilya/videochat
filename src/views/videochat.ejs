<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/css/style.css" type="text/css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/d6fb30947e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
    <script>
        const ROOM_ID = "<%= roomId %>"
        const USERNAME = "<%= username %>"
    </script>
    <title>Document</title>
</head>
<body>

    <div class="main">
        <div class="main__left left">
            <div class="left__videos">
                <div class="video-grid"></div>
            </div>
            <div class="left__controls">
                <div class="left__controls__block">
                    <div class="left__controls__button mute-button">
                        <i class="fa-solid fa-microphone"></i>
                        <span>Mute</span>
                    </div>
                    <div class="left__controls__button video-button">
                        <i class="fa-solid fa-video"></i>
                        <span>Stop Video</span>
                    </div>
                </div>
                <div class="left__controls__block">
                    <div class="left__controls__button">
                        <i class="fa-solid fa-shield-halved"></i>
                        <span>Security</span>
                    </div>
                    <div class="left__controls__button chat-participants">
                        <i class="fa-solid fa-users"></i>
                        <span>Participants</span>
                    </div>
                    <div class="left__controls__button chat-messages">
                        <i class="fa-solid fa-message"></i>
                        <span>Chat</span>
                    </div>
                </div>
                <div class="left__controls__block">
                    <div class="left__controls__button">
                        <span class="leave-meeting">Leave Meeting</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main__right right">
            <div class="right__header">
                chat
            </div>
            <div class="right__chat">
                <div class="right-chat__messages-block"></div>
            </div>
            <div class="main__participants">
                <div class="main-participants__participants-header participants-header">
                    Participants
                </div>
                <div class="main-participants__participants-list participants-list">

                    <ul>
                        <li>1</li>
                        <li>2</li>
                    </ul>
                </div>
            </div>
            <div class="right__message-container">
                <input id="chatMessage" placeholder="Type message..." type="text">
            </div>
        </div>
    </div>

    <script type="module" src="/js/script.js"></script>
</body>
</html>